{
  "name": "p2p-news-app",
  "version": "0.0.1",
  "description": "A p2p-news-app worked via hypercore/hyperswarms stack",
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    },
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "script"
    },
    "rules": {
      "camelcase": "off",
      "indent": ["error", 2]
    }
  },
  "scripts": {
    "web": "budo web/page.js:bundle.js --live --open",
    "build": "browserify web/page.js > bundle.js",
    "relay": "node src/node_modules/relay/index.js",
    "resetcli": "rm -rf ./storage* && rm -rf ./.local-storage",
    "peer": "bare src/node_modules/bare-peer/index.js",
    "lint": "standardx",
    "lintfix": "standardx --fix",
    "postinstall": "patch-package",
    "web:news": "budo web/news.js:news-bundle.js --live --open",
    "build:news": "browserify web/news.js > news-bundle.js"

  },
  "bin": {
    "native-peer": "./bin/cli.js"
  },
  "dependencies": {
    "@geut/sodium-javascript-plus": "^0.0.6",
    "@hyperswarm/dht-relay": "^0.4.3",
    "@hyperswarm/testnet": "^3.1.4",
    "autobase": "^6.5.13",
    "b4a": "^1.6.7",
    "bare-crypto": "^1.4.5",
    "bare-fs": "^4.1.6",
    "bare-path": "^3.0.0",
    "bare-process": "^4.2.1",
    "bip39-mnemonic": "^2.4.0",
    "blind-pairing": "^2.3.1",
    "blind-pairing-core": "^2.9.0",
    "corestore": "^6.18.4",
    "hyper-webrtc": "^1.0.0",
    "hypercore-crypto": "^3.6.1",
    "hyperdrive": "^11.13.4",
    "hyperswarm": "^4.8.4",
    "random-access-memory": "^6.2.1",
    "random-access-web": "^2.0.3",
    "sodium-javascript": "^0.8.0",
    "sodium-universal": "^5.0.1",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "browserify": "^17.0.0",
    "budo": "^11.8.4",
    "patch-package": "^8.0.0",
    "postinstall-postinstall": "^2.1.0",
    "standardx": "^7.0.0"
  },
  "overrides": {
    "hypercore": "10.38.2"
  }
}
